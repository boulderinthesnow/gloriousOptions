
<% include ../partials/header %>
<div id="new-window">
  <div id="new-all">
  <div id="centerMe">
    <div id="newUser">
      <h1>Add a NEW User</h1>
      <form action="/signup" class="form-inline center" method="POST" id="new-window">
       <div class="form-group">
         <input type="text" name="user[username]" id="username" class="form-control" autofocus placeholder="username">
       </div>   

       <div class="form-group">
         <input type="password" name="user[password]" id="password" class="form-control" placeholder="password">
       </div>
       <br>
       <br>
       <span class="form-group">
         <label for="gf">Gluten Free</label>
         <input type="checkbox" data-toggle="toggle" name="user[gf]" id="gf" class="form-control">
         <label for="df">Dairy Free</label>
         <input type="checkbox" data-toggle="toggle" name="user[df]" id="df" class="form-control">  
         <label for="ef">Egg Free</label>
         <input type="checkbox" data-toggle="toggle" name="user[ef]" id="ef" class="form-control">
         <label for="sf">Soy Free</label>
         <input type="checkbox" data-toggle="toggle" name="user[sf]" id="sf" class="form-control">  
       </span>
       <br>
       <br>
       <input id="new-window" type="submit" value="Create" class="btn btn-success">
      </form>
   </div> 
   </div>
   </div>
</div>

<% include ../partials/footer %>