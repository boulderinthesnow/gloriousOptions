
<% include ../partials/header %>

<h1>EDIT User</h1> 
 <form action="/users/<%=user.id%>/?_method=PUT" class="form-inline" method="POST">
   <div class="form-group">
     <input type="text" name="user[username]" id="username" class="form-control" autofocus value="<%=user.username%>">
   </div>   
   <div class="form-group">
     <input type="password" name="user[password]" id="password" class="form-control" placeholder="password">
   </div>
   <br>
   <span class="form-group">
     <label for="gf">Gluten Free</label>
     <input type="checkbox" name="user[gf]" id="gf" class="form-control">
     <label for="df">Dairy Free</label>
     <input type="checkbox" name="user[df]" id="df" class="form-control">  
     <label for="ef">Egg Free</label>
     <input type="checkbox" name="user[ef]" id="ef" class="form-control">
     <label for="sf">Soy Free</label>
     <input type="checkbox" name="user[sf]" id="sf" class="form-control">  
   </span>
   <br>
   <input type="submit" value="Create" class="btn btn-success">
 </form>

<% include ../partials/footer %>
